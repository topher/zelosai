[
  {
    "id": "policy-agent-access",
    "organizationId": "*",
    "description": "Agent has read and write access to Agent Org resources.",
    "rules": [
      {
        "id": "rule-agent-read",
        "ruleType": "access",
        "deontologicalDuty": "allowed",
        "predicate": ["read"],
        "subjectCondition": {
          "type": "group",
          "operator": "AND",
          "conditions": [
            {
              "attribute": "orgRole",
              "operator": "is",
              "value": "org:admin"
            }
          ]
        },
        "objectCondition": {
          "type": "group",
          "operator": "OR",
          "conditions": [
            {
              "attribute": "orgId",
              "operator": "is",
              "value": "$orgId"
            },
            {
              "attribute": "orgId",
              "operator": "is",
              "value": "org_platform"
            }
          ]
        },
        "createdBy": "system",
        "ownedBy": "admin"
      },
      {
        "id": "rule-agent-write",
        "ruleType": "access",
        "deontologicalDuty": "allowed",
        "predicate": ["write"],
        "subjectCondition": {
          "type": "group",
          "operator": "AND",
          "conditions": [
            {
              "attribute": "orgRole",
              "operator": "is",
              "value": "org:admin"
            }
          ]
        },
        "objectCondition": {
          "type": "group",
          "operator": "OR",
          "conditions": [
            {
              "attribute": "orgId",
              "operator": "is",
              "value": "$orgId"
            },
            {
              "attribute": "orgId",
              "operator": "is",
              "value": "org_platform"
            }
          ]
        },
        "createdBy": "system",
        "ownedBy": "admin"
      }
    ]
  },
