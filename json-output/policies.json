  {
    "id": "policy-member-public-read",
    "organizationId": "*",
    "description": "Members can read public resources within their organization or from the platform.",
    "rules": [
      {
        "id": "rule-member-read-public",
        "ruleType": "access",
        "deontologicalDuty": "allowed",
        "predicate": ["read"],
        "subjectCondition": {
          "type": "group",
          "operator": "AND",
          "conditions": [
            {
              "attribute": "orgRole",
              "operator": "is",
              "value": "org:member"
            }
          ]
        },
        "objectCondition": {
          "type": "group",
          "operator": "AND",
          "conditions": [
            {
              "attribute": "visibility",
              "operator": "is",
              "value": "public"
            },
            {
              "attribute": "orgId",
              "operator": "in",
              "value": ["$orgId", "org_platform"]
            }
          ]
        },
        "createdBy": "system",
        "ownedBy": "admin"
